<div class="row"> 
<h2>Components<h2>
  <button class="btn" onclick="location.href='@Url.Action("new", "component")'">Add</button>

<hr>

@foreach (var item in @ViewBag.list)
{
  <div class="row">
    <span>Serial No: @item.SerialNo. Type: @item.ComponentType.ComponentName</span>
    <button class="btn" onclick="location.href='@Url.Action("show", "component")/@item.ComponentId'">Show</button>
    <button class="btn" onclick="location.href='@Url.Action("edit", "component")/@item.ComponentId'">Edit</button>
    <button class="btn" onclick = "location.href='@Url.Action("delete", "component")/@item.ComponentId';return confirm('Are you sure you wish to delete this article?');" >Delete</button>
  </div>

}
